{
  "name": "lettersanitizer",
  "version": "1.0.2",
  "description": "DOM-based HTML email sanitizer for in-browser email rendering.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "email",
    "e-mail",
    "mail",
    "mime-message",
    "typescript",
    "library",
    "dom",
    "sanitizer",
    "purifier",
    "html"
  ],
  "scripts": {
    "prepare": "npm run build",
    "test": "jest",
    "build": "tsc",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mat-sz/lettersanitizer.git"
  },
  "bugs": {
    "url": "https://github.com/mat-sz/lettersanitizer/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "homepage": "https://github.com/mat-sz/lettersanitizer",
  "author": "Mat Sz <contact@matsz.dev>",
  "license": "BSD-3-Clause-Clear",
  "private": false,
  "devDependencies": {
    "@types/jest": "24.9.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.3",
    "jest": "24.9.0",
    "jsdom": "11.12.0",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "ts-jest": "^24.3.0",
    "typescript": "3.9.10"
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
